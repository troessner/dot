[alias]
  ci = commit
  s  = status
  ss = status --short
  st = stash
  sp = stash pop
  a  = add
  d  = diff
  ds = diff --staged
  co = checkout
  b  = branch
  l  = log
  cp = cherry-pick
  rb = rebase
  re = reset
  lp = log --patch --decorate --pretty=oneline --abbrev-commit
  ls = log --stat --decorate --pretty=oneline --abbrev-commit
  sh = show
  pl = pull
  plr = pull --rebase
  ps = push
  ulc= reset --soft HEAD^
  c= clean -fd
  commit-summary=diff-tree --no-commit-id --name-only -r
  rom= rebase origin/master
  romi= rebase -i origin/master
[user]
  name = Timo Rößner
  email = timo.roessner@googlemail.com
[push]
  default = tracking
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = black bold
  frag = magenta bold
  old = red bold
  new = blue bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[branch "master"]
  rebase = true
