alias g='git'
alias tf='tail -f -n 200'
alias 'cd..'='cd ..'
alias pa='ps aux'
alias t='tree'
alias acs='apt-cache search'
alias agi='sudo apt-get install'
alias agu='sudo apt-get update'
#cassandra
alias cass='rm -r /var/lib/cassandra/commitlog && rm -r /var/lib/cassandra/data && rm -r /var/lib/cassandra/saved_caches && cd /opt/apache-cassandra-0.7.0/ && bin/cassandra -f'
# git
alias show_committers='git log --pretty=format:%aN | sort | uniq -c | sort -rn'
# rackup
alias ra='rackup'
# passenger
alias res='touch tmp/restart.txt'
# rails in general
alias tfd='tail -f log/development.log'
alias tft='tail -f log/test.log'
## jeweler
alias gem_release='rake build && rake gemspec:generate && rake version:bump:patch && rake release'
#ruby
alias i='irb'
# rails scripts
sc () {
  if [ -f ./script/rails ]; then
    rails c $@
  else
    ./script/console $@
  fi
}

sg () {
  if [ -f ./script/rails ]; then
    rails g $@
  else
    ./script/generate $@
  fi
}

ss () {
  if [ -f ./script/rails ]; then
    rails s $@
  else
    ./script/server $@
  fi
}
